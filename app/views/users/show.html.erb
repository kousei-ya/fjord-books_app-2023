<h1><%= @user.email %></h1>
<p><%= User.human_attribute_name(:postal_code) %>: <%= @user.postal_code %></p>
<p><%= User.human_attribute_name(:address) %>: <%= @user.address %></p>
<p><%= User.human_attribute_name(:profile) %>: <%= @user.profile %></p>
<% if current_user == @user %>
  <%= link_to t('views.common.edit', name: User.model_name.human), edit_user_registration_path, class: 'btn btn-primary' %>
<% end %>
<p>
  <%= link_to t('views.common.back', name: User.model_name.human), users_path %>
</p>
