<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="<%= params[:action] %>">
    <% if user_signed_in? %>
      <p><%= User.human_attribute_name(:user) %>: <%= current_user.email %></p>
      <%= button_to t('views.common.logout'), destroy_user_session_path, method: :delete %>

    <% end %>

    <%= yield %>
  </body>
</html>
